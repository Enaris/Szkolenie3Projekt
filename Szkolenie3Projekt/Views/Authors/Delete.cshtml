@model Szkolenie3Projekt.Services.DTOs.AuthorDetailsDto

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete author</h1>
@{
    var author = $"{Model.FirstName} {Model.LastName}";
}

<h3>Are you sure you want to delete this author and all of his/hers books?</h3>
<div>
    <h4>@author</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Date of birth
        </dt>
        <dd class="col-sm-10">
            @Model.DateOfBirth.ToString("dd/MM/yyyy")
        </dd>
    </dl>

    @if (Model.Books.Count() > 0)
    {
        <div>
            <h5>Books</h5>
            <ul>
                @foreach (var b in Model.Books)
                {
                    <li>
                        <a asp-action="Details" asp-controller="Books" asp-route-id="@b.Id">@b.Title</a>
                    </li>
                }
            </ul>
        </div>
    }

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to authors list</a>
    </form>
</div>
