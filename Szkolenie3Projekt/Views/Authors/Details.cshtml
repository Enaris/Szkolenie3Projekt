@model Szkolenie3Projekt.Services.DTOs.AuthorDetailsDto

@{
    ViewData["Title"] = "Details";
}

<h1>Authro details</h1>
@{
    var author = $"{Model.FirstName} {Model.FirstName}";
}

<div>
    <h4>@author</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            First Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            Last Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            Date of birth
        </dt>
        <dd class="col-sm-10">
            @Model.DateOfBirth.ToString("dd/MM/yyyy")
        </dd>
    </dl>
</div>

@if (Model.Books.Count() > 0)
{
    <div>
        Average book score: @Model.MeanScore
    </div>
    <div>
        <h5>Books</h5>
        <ul>
            @foreach (var b in Model.Books)
            {
                <li>
                    <a asp-action="Details" asp-controller="Books" asp-route-id="@b.Id">@b.Title</a>
                </li>
            }
        </ul>
    </div>
}

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to authors list</a>
</div>
